<!--                    <div class="container">-->
<!--                        <div class="row">-->
<!--                            <div class="col-md-12">-->
<!--                                <div class="title_head_contain">-->
<!--                                    <h3>News</h3>-->
<!--                                </div>-->
<!--                            </div>-->
<!--                        </div>-->
<!--                    </div>-->
<!--                </section>-->
<!--                </t>-->
<!--            </xpath>-->

        </template>


        <record id="blog_post_view_form_inherited" model="ir.ui.view">
            <field name="name">blog.post.form.inherited</field>
            <field name="model">blog.post</field>
            <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="image"/>
                    <field name="content"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>