<odoo>
    <data>
        <template id="badailtech_blog_template" active="True" inherit_id="website_blog.blog_post_short">
            <xpath  expr="//div[@id='o_wblog_blog_top']" position="replace">
                <section class="badailtech_breadcrumb mt-5">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="title_head_contain blog_list_title">
                                    <h3>News</h3>
                                    <form id="o_wblog_post_search" class="form-inline w-100 w-md-auto pt-2 pt-md-0 d-md-flex"
                                          role="search" t-att-action="blog_url(tag=tag,search=search)" method="get">
                                        <t t-call="website.website_search_box">
                                            <t t-set="_classes" t-valuef="w-100"/>
                                        </t>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </xpath>
            <xpath  expr="//div[@id='o_wblog_posts_loop_container']" position="replace">
                <t t-foreach="posts" t-as="blog_post">
                    <div class="col-md-12 mt-3 blog_list_container">
                        <div class="">
                            <a title="Blog image"  t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="blog-list-item-image">
                                <img alt="Blog" class="img-fluid"
                                     data-original-title="" title=""
                                     aria-describedby="tooltip838064"
                                     t-att-src="'/web/image/blog.post/%s/image' % blog_post.id"/>

                            </a>

                        </div>

                        <div class="home_latset_news_grid_content mt-3">
                            <a class="blog_title_link" t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}">
                                <h3 class="blog_page_title" t-field="blog_post.name"/>
                            </a>
                            <p class="news_grid_subtitle" t-field="blog_post.subtitle"/>
                            <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="blog_details_btn text-right">Read More</a>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>

        <!--   blog details -->
        <template id="blog_post_complete_inherited_template" active="True" name="Badailtech Blog Post" inherit_id="website_blog.blog_post_complete">
            <xpath expr="//t[@t-call='website_blog.index']" position="replace">
                <t t-call="website_blog.index">
                    <section class="badailtech_breadcrumb mt-5">
                        <div class="container">
                            <div class="row">
                                <div class="col-md-12">
                                    <div class="title_head_contain">
                                        <h3>News</h3>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </section>
                    <section class="oe_structure mb-5">
                        <div class="container sec-contain">
                            <div class="row">
                                <div class="col-md-12 m-auto blog_details_bg">
                                    <div class="blog_details_bg_content">
                                        <h4>News</h4>
                                        <p>the most accurate and recent news in the technology world
                                        </p>
                                    </div>                                                                                            </div>
                            </div>
                        </div>
                    </section>
                    <section class="blog_details_content mt-3">
                        <div class="container">
                            <div class="mark_title">
                                <h3 class="" t-field="blog_post.name"/>
                            </div>
                            <div>
                                <p t-field="blog_post.content" />
                            </div>
                        </div>
                    </section>
                    <section class="mt-5 mb-5">
                        <div class="container">
                            <div class="mark_title">
                                <h3 class="mb-4">Similar News</h3>
                            </div>
                            <div class="owl-carousel owl-theme odoo_blog_details_slider">
                                <t t-foreach="similar_posts" t-as="blog_val">
                                    <div class="item services_page_item_slider blog_details_page_item_slider mx-3">
                                        <div class="row">
                                            <div class="col-4">
                                                <a title="Blog image"  t-attf-href="/blog/#{slug(blog_val.blog_id)}/post/#{slug(blog_val)}" class="blog-list-item-image">
                                                    <img alt="Blog" class="img-fluid"
                                                         data-original-title="" title=""
                                                         aria-describedby="tooltip838064"
                                                         t-att-src="'/web/image/blog.post/%s/image' % blog_val.id"/>
                                                </a>
                                            </div>
                                            <div class="col-8">
                                                <h5 t-field="blog_val.name" />
                                                <p class="odoo_customer_slider_txt" t-field="blog_val.subtitle"/>
                                                <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="blog_details_btn text-right">Read More</a>
                                            </div>
                                        </div>
                                    </div>
                                </t>
                            </div>

                        </div>
                    </section>
                </t>
            </xpath>
        </template>


        <record id="blog_post_view_form_inherited" model="ir.ui.view">
            <field name="name">blog.post.form.inherited</field>
            <field name="model">blog.post</field>
            <field name="inherit_id" ref="website_blog.view_blog_post_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="image"/>
                    <field name="content"/>
                </xpath>

            </field>
        </record>

    </data>
</odoo>