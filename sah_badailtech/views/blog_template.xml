<odoo>
    <data>
        <template id="badailtech_blog_template" active="True" inherit_id="website_blog.blog_post_short">
            <xpath  expr="//div[@id='o_wblog_blog_top']" position="replace">
                <section class="badailtech_breadcrumb">
                    <div class="container">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="title_head_contain">
                                    <h3>News</h3>
                                </div>
                            </div>
                        </div>
                    </div>
                </section>
            </xpath>
            <xpath  expr="//div[@id='o_wblog_posts_loop_container']" position="replace">
                <t t-foreach="posts" t-as="blog_post">
                    <div class="col-md-12 mt-3 blog_list_container">
                        <div class="">
                            <a title="Blog image"  t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="blog-list-item-image">
                                <img alt="Blog" class="img-fluid"
                                     data-original-title="" title=""
                                     aria-describedby="tooltip838064"
                                     t-att-src="'/web/image/blog.post/%s/image' % blog_post.id"/>

                            </a>

                        </div>

                        <div class="home_latset_news_grid_content mt-3">
                            <a class="blog_title_link" t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}">
                                <h3 class="blog_page_title" t-field="blog_post.name"/>
                            </a>
                            <p class="news_grid_subtitle" t-field="blog_post.subtitle"/>
                            <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="blog_details_btn text-right">Read More</a>
                        </div>
                    </div>
                </t>
            </xpath>
        </template>

        <!--   blog details -->
        <template id="blog_post_complete_inherited_template" active="True" name="Badailtech Blog Post" inherit_id="website_blog.blog_post_complete">
<!--            <xpath expr="//t[@t-call='website_blog.index']" position="replace">-->
<!--                <t t-call="website_blog.index">-->
