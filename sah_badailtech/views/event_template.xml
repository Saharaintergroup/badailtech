                <!--                            </a>-->

                <!--                        </div>-->

                <!--                        <div class="home_latset_news_grid_content mt-3">-->
                <!--                            <h3 class="blog_page_title" t-field="blog_post.name"/>-->
                <!--                            <p class="news_grid_subtitle" t-field="blog_post.subtitle"/>-->
                <!--                            <a t-attf-href="/blog/#{slug(blog_post.blog_id)}/post/#{slug(blog_post)}" class="blog_details_btn text-right">Read More</a>-->
                <!--                        </div>-->
                <!--                    </div>-->
                <!--                </t>-->
            </xpath>
        </template>

        <record id="event_view_form_inherited" model="ir.ui.view">
            <field name="name">	event.event.form.inherited</field>
            <field name="model">event.event</field>
            <field name="inherit_id" ref="event.view_event_form"/>
            <field name="arch" type="xml">

                <xpath expr="//field[@name='tag_ids']" position="after">
                    <field name="image"/>
                </xpath>

            </field>
        </record>

    </data>
