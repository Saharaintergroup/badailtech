<odoo>
    <data>

        <record id="website.template_header_default" model="ir.ui.view">
            <field name="active" eval="False"/>
        </record>

        <template id="badailtech_header_layout" active="True" inherit_id="website.layout">
            <xpath expr="//header//nav" position="replace">
                <nav data-name="Navbar" class="navbar navbar-expand-lg navbar-dark navbar-fixed-top pages_nav">
                    <div id="top_menu_container" class="container justify-content-start justify-content-lg-between">
                        <!-- Brand -->
                        <t t-call="website.placeholder_header_brand">
                            <t t-set="_link_class" t-value="'mr-4'"/>
                        </t>
                        <!-- Navbar Toggler -->
                        <t t-call="website.navbar_toggler">
                            <t t-set="_toggler_class" t-value="'ml-auto'"/>
                        </t>
                        <!-- Navbar Collapse -->
                        <div id="top_menu_collapse" class="collapse navbar-collapse order-last order-lg-0">
                            <t t-call="website.navbar_nav">
                                <t t-set="_nav_class" t-value="'flex-grow-1 total_pages'"/>
                                <!-- Menu -->
                                <t t-foreach="website.menu_id.child_id" t-as="submenu">
                                    <t t-call="website.submenu">
                                        <t t-set="item_class" t-value="'nav-item'"/>
                                        <t t-set="link_class" t-value="'nav-link'"/>
                                    </t>
                                </t>
                                <!-- Sign In -->
                                <t t-call="portal.placeholder_user_sign_in">
                                    <t t-set="_item_class" t-value="'nav-item ml-lg-auto'"/>
                                    <t t-set="_link_class" t-value="'nav-link font-weight-bold'"/>
                                </t>
                                <!-- User Dropdown -->
                                <t t-call="portal.user_dropdown">
                                    <t t-set="_user_name" t-value="true"/>
                                    <t t-set="_item_class" t-value="'nav-item dropdown ml-lg-auto'"/>
                                    <t t-set="_link_class" t-value="'nav-link font-weight-bold'"/>
                                </t>
                            </t>
                        </div>
                        <div class="text-right">
                            <div class="langs_menu nav_menu_language" t-if="(request and request.is_frontend_multilang and len(languages) &gt; 1) or (website and (editable or translatable))">
                                <t t-foreach="languages" t-as="lg">
                                    <a class="menu_lang_pages" t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang_code=lg[0])" t-att-data-url_code="lg[1]">
                                        <t t-esc="lg[2].split('/').pop()"/>
                                    </a>
                                    <span class="lang_cut">/</span>
                                </t>
                            </div>
                        </div>
                        <!-- Button -->
                        <div class="oe_structure" id="oe_structure_header_default_1"/>
                    </div>
                </nav>
            </xpath>
        </template>


        <template id="badailtech_footer_layout" active="True" inherit_id="website.layout">
            <xpath expr="//div[@id='footer']" position="replace">
                <!-- footer -->
                <div id="footer" class="oe_structure oe_structure_solo" t-ignore="true" t-if="not no_footer">
                    <footer class="page-footer font-small stylish-color-dark footer_pages_bg">
                        <!-- Footer Links -->
                        <div class="container">
                            <!-- Grid row -->
                            <div class="row pb-3">
                                <!-- Grid column -->
                                <div class="col-md-3 col-sm-12 footer_logo_img footer_grid_col">
                                    <!-- Content -->
                                    <h2>Our Mission</h2>
                                    <p>At badailtech,we work to help
                                        entrepreneurs find the most effective
                                        and easiest e-solution for their business
                                        by employing a professional team that
                                        listens well to all our customer's
                                        requirements</p>
                                    <div>
                                        <ul class="mt-4 mb-5 p-0">
                                            <li class="contact_information_social_icons">
                                                <a t-att-href="website.social_facebook" target="_blank"><i class="fa fa-facebook"></i></a>
                                            </li>
                                            <li class="contact_information_social_icons">
                                                <a target="_blank" t-att-href="website.social_twitter"><i class="fa fa-twitter"></i></a>
                                            </li>
                                            <li class="contact_information_social_icons">
                                                <a target="_blank"  t-att-href="website.social_instagram"><i class="fa fa-instagram"></i></a>
                                            </li>
                                            <li class="contact_information_social_icons">
                                                <a target="_blank" t-att-href="website.social_youtube"><i class="fa fa-youtube"></i></a>
                                            </li>
                                        </ul>
                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-12 footer_grid_col">
                                    <!-- Links -->
                                    <h5 class="mt-3 mb-4 footer_links">Links</h5>
                                    <ul class="list-unstyled">
                                        <li>
                                            <a class="footer_page" href="/about_us">About Us</a>
                                        </li>
                                        <li>
                                            <a class="footer_page" href="/blog">About Odoo</a>
                                        </li>
                                        <li>
                                            <a class="footer_page" href="/shop">Training &amp; Careers</a>
                                        </li>
                                        <li>
                                            <a class="footer_page" href="/contact_us">Contact Us</a>
                                        </li>
                                    </ul>
                                </div>
                                <div class="col-md-3 col-sm-12 footer_grid_col">
                                    <!-- Links -->
                                    <h5 class="footer_links mt-3 mb-4">Get In Touch</h5>
                                    <div>
                                        <ul class="list-unstyled">
                                            <li class="footer_list_links">
                                                <i class="fa fa-map-marker icon_footer_support"></i>
                                                <a target="blank" class="footer_page_contact">Sohar,Sultanete of oman</a>
                                            </li>
                                            <li class="footer_list_links">
                                                <i class="fa fa-phone icon_footer_support"></i>
                                                <a target="blank" class="footer_page_contact">+968 92517926</a>
                                            </li>
                                            <li class="footer_list_links">
                                                <i class="fa fa-envelope icon_footer_support"></i>
                                                <a  target="blank" class="footer_page_contact">info@badailtech.com</a>
                                            </li>
                                        </ul>

                                    </div>
                                </div>
                                <div class="col-md-3 col-sm-12 footer_grid_col">
                                    <!-- Links -->
                                    <h5 class="mt-3 mb-4 footer_links">Business Hours</h5>
                                    <div class="business_hours">
                                        <h5>Opening Days</h5>
                                        <p class="mb-0">Sunday - Thursday : 9am to 5pm</p>
                                        <p>Saturday 4 pm to 8 pmm</p>
                                        <h5 class="mt-4">
                                            Vacation
                                        </h5>
                                        <p>All friday  days are official Holidays </p>
                                    </div>
                                </div>

                            </div>
                        </div>
                    </footer>
                </div>
                <!-- footer -->
            </xpath>
            <xpath expr="//div[hasclass('o_footer_copyright')]" position="replace"/>
        </template>

    </data>
</odoo>